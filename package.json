    "@types/lodash": "^4.17.23",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@types/react-router": "5.1.20",
    "@types/react-router-dom": "5.3.3",
    "@types/suncalc": "^1.9.2",
    "babel-jest": "30.2.0",
    "babel-plugin-module-resolver": "5.0.2",
    "copy-webpack-plugin": "^13.0.1",
    "cordova-res": "0.15.4",
    "dotenv": "17.2.3",
    "eslint": "^9.39.2",
    "gettext-parser": "2.0.0",
    "gettext-to-messageformat": "0.3.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "jest-transform-stub": "2.0.0",
    "mock-geolocation": "1.0.11",
    "prettier": "^3.8.1",
    "tailwindcss": "4.1.18",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vercel": "50.9.1",
    "webpack": "5.104.1",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.3"
  },
  "browserslist": [
    "ChromeAndroid >=89",
    "iOS >=12"
  ],
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "author": {
    "name": "Flumens",
    "email": "enquiries@flumens.io",
    "url": "https://flumens.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NERC-CEH/ebms-app"
  },
  "bugs": {
    "url": "https://github.com/NERC-CEH/ebms-app/issues"
  },
  "licenses": [
    {
      "type": "GNU GPL v3",
      "url": "http://www.gnu.org/licenses/gpl.html"
    }
  ],
  "keywords": [
    "ebms",
    "biological",
    "recording",
    "mobile",
    "app",
    "offline",
    "ceh",
    "ukbms"
  ],
  "babel": {
    "presets": [
      [
        "@babel/react",
        {
          "runtime": "automatic"
        }
      ],
      [
        "@babel/env",
        {
          "loose": true,
          "modules": "commonjs",
          "corejs": "3.22",
          "useBuiltIns": "usage"
        }
      ],
      [
        "@babel/typescript",
        {
          "allowDeclareFields": true
        }
      ]
    ],
    "plugins": [
      [
        "@babel/transform-runtime",
        {
          "regenerator": true
        }
      ],
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ],
          "alias": {
            "@flumens$": "./src/common/flumens",
            "common": "./src/common",
            "helpers": "./src/common/helpers",
            "models": "./src/common/models",
            "Components": "./src/common/Components"
          }
        }
      ],
      [
        "@babel/proposal-private-property-in-object",
        {
          "loose": true
        }
      ],
      "@babel/transform-exponentiation-operator",
      "@babel/syntax-dynamic-import"
    ]
  },
  "prettier": "@flumens/prettier-config",
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "babel-jest",
        {
          "presets": [
            "@babel/env"
          ]
        }
      ]
    },
    "testRegex": "src.*((\\.|/*.)(spec))\\.(t|j)s?$",
    "moduleNameMapper": {
      "^.+.(css|style|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "ionic-native": "jest-transform-stub",
      "swiper": "jest-transform-stub"
    },
    "moduleDirectories": [
      "node_modules",
      "components",
      "src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ionic|@stencil|ionicons)"
    ]
  }
}
