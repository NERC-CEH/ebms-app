{
  "name": "butterfly-count-app",
  "id": "uk.ac.ceh.ebms",
  "title": "ButterflyCount",
  "description": "ButterflyCount mobile application.",
  "version": "1.18.0",
  "homepage": "http://www.butterfly-monitoring.net",
  "scripts": {
    "start": "webpack serve --progress --port 8000",
    "build": "NODE_ENV=production webpack",
    "build:production": "npm run clean && npm run build && npx cap sync && npm run build:resources",
    "build:resources": "mkdir -p resources && cp -R other/designs/android resources && cp -R other/designs/*.png resources && npx cordova-res ios --skip-config --resources resources --copy && npx cordova-res android --skip-config --resources resources --copy",
    "deploy": "cp other/demo.html build/ && URL=$(vercel --prod -t $VERCEL_TOKEN --confirm ./build) && CLEAN_URL=$(echo $URL | sed -r \"s/https:\\/\\/(.*)$/\\1/g\") && DEMO_URL=$(echo $CLEAN_URL | sed -r \"s/(.*\\-)[a-z0-9]+\\-flumens(\\.vercel\\.app)$/\\1${BITRISE_BUILD_NUMBER}\\2/g\") && vercel alias set $CLEAN_URL $DEMO_URL -t $VERCEL_TOKEN && envman add --key DEMO_URL --value \"https://$DEMO_URL\"",
    "deploy:production": "bitrise ci",
    "clean": "rm -rf build resources",
    "test:eslint": "eslint src --quiet --ext .jsx --ext .js --ext .ts --ext .tsx && echo '\\033[37;42;1m PASS \\033[00m'",
    "test": "jest --silent --passWithNoTests",
    "test:watch": "jest --watchAll",
    "fetch:species:data": "cd src/common/data/species && node make.js",
    "fetch:species:profiles": "cd src/common/data/profiles && node make.js",
    "fetch:species:commonNames": "cd src/common/data/commonNames && node make.js",
    "fetch:all": "npm run fetch:species:data && npm run fetch:species:profiles && npm run fetch:species:commonNames"
  },
  "dependencies": {
    "@capacitor-community/background-geolocation": "^1.2.3",
    "@capacitor/android": "3.3.2",
    "@capacitor/app": "^1.0.6",
    "@capacitor/camera": "^1.2.1",
    "@capacitor/core": "3.3.2",
    "@capacitor/filesystem": "^1.0.6",
    "@capacitor/geolocation": "^1.3.1",
    "@capacitor/haptics": "^1.1.3",
    "@capacitor/ios": "3.3.2",
    "@capacitor/keyboard": "^1.1.3",
    "@capacitor/network": "^1.0.7",
    "@capacitor/splash-screen": "^1.1.6",
    "@capacitor/status-bar": "^1.0.6",
    "@flumens/bigu": "^0.4.0",
    "@flumens/ionic": "1.4.0",
    "@indicia-js/core": "^6.1.0",
    "@indicia-js/remote": "^6.1.5",
    "@ionic-native/core": "5.36.0",
    "@ionic-native/launch-review": "^5.36.0",
    "@ionic-native/sqlite": "5.36.0",
    "@ionic/core": "^6.1.4",
    "@ionic/react": "^6.1.4",
    "@ionic/react-router": "^6.1.4",
    "@mapbox/geojson-area": "0.2.2",
    "@sentry/browser": "^6.19.7",
    "@sentry/integrations": "^6.19.7",
    "@turf/distance": "^6.5.0",
    "axios": "0.24.0",
    "clsx": "^1.1.1",
    "cordova-sqlite-storage": "6.0.0",
    "d3": "7.1.1",
    "deep-diff": "^1.0.2",
    "formik": "2.2.9",
    "framer-motion": "4.1.17",
    "i18next": "21.4.0",
    "ionicons": "^6",
    "jwt-decode": "^3.1.2",
    "leaflet": "1.7.1",
    "leaflet-draw": "1.0.4",
    "localforage": "1.10.0",
    "localforage-cordovasqlitedriver": "1.8.0",
    "lodash": "4.17.21",
    "mobx": "^6.5.0",
    "mobx-react": "^7.2.1",
    "mobx-utils": "^6.0.5",
    "proj4": "^2.8.0",
    "proj4leaflet": "^1.0.2",
    "prop-types": "15.7.2",
    "prop-types-exact": "^1.2.0",
    "react": "17.0.2",
    "react-autosuggest": "^10.1.0",
    "react-countdown-now": "2.1.2",
    "react-dom": "17.0.2",
    "react-i18next": "11.13.0",
    "react-leaflet": "3.2.2",
    "react-leaflet-markercluster": "^3.0.0-rc1",
    "react-router": "5.2.1",
    "react-router-dom": "5.3.0",
    "swiper": "^8.1.5",
    "wicket": "1.3.8",
    "yup": "0.32.11"
  },
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/plugin-proposal-class-properties": "^7.17.12",
    "@babel/plugin-proposal-decorators": "^7.17.12",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-exponentiation-operator": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@capacitor/cli": "^3.5.1",
    "@flumens/eslint-config": "^2.0.1",
    "@flumens/webpack-config": "^4.1.2",
    "@types/jest": "^27.5.1",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "@types/react-leaflet": "^2.8.2",
    "@types/react-leaflet-markercluster": "^3.0.0",
    "@types/react-router": "^5.1.18",
    "@types/react-router-dom": "^5.3.3",
    "babel-jest": "^28.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "btoa": "^1.2.1",
    "cordova-res": "^0.15.4",
    "csvtojson": "2.0.10",
    "dotenv": "^16.0.1",
    "eslint": "^8.16.0",
    "gettext-parser": "^2.0.0",
    "gettext-to-messageformat": "0.3.1",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "jest-transform-stub": "^2.0.0",
    "mock-geolocation": "1.0.11",
    "request": "2.88.2",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "vercel": "^24.2.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "author": {
    "name": "Flumens",
    "email": "enquiries@flumens.io",
    "url": "https://flumens.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NERC-CEH/ebms-app"
  },
  "bugs": {
    "url": "https://github.com/NERC-CEH/ebms-app/issues"
  },
  "licenses": [
    {
      "type": "GNU GPL v3",
      "url": "http://www.gnu.org/licenses/gpl.html"
    }
  ],
  "keywords": [
    "ebms",
    "biological",
    "recording",
    "mobile",
    "app",
    "offline",
    "ceh",
    "ukbms"
  ],
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "android": "5.1",
            "ios": "10.2"
          },
          "modules": "commonjs",
          "corejs": "3.0.0",
          "useBuiltIns": "usage"
        }
      ],
      [
        "@babel/react",
        {
          "runtime": "automatic"
        }
      ],
      "@babel/typescript"
    ],
    "plugins": [
      [
        "@babel/transform-runtime",
        {
          "regenerator": true
        }
      ],
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ],
          "alias": {
            "@flumens$": "./src/common/flumens",
            "common": "./src/common",
            "helpers": "./src/common/helpers",
            "models": "./src/common/models",
            "Components": "./src/common/Components"
          }
        }
      ],
      [
        "@babel/proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/proposal-private-property-in-object",
        {
          "loose": true
        }
      ],
      "@babel/transform-exponentiation-operator",
      [
        "@babel/proposal-private-methods",
        {
          "loose": true
        }
      ],
      [
        "@babel/proposal-class-properties",
        {
          "loose": true
        }
      ],
      "@babel/syntax-dynamic-import"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@flumens",
      "plugin:react/jsx-runtime"
    ],
    "rules": {
      "arrow-body-style": 0,
      "no-restricted-exports": 0,
      "react/jsx-no-useless-fragment": 0,
      "class-methods-use-this": 0,
      "default-param-last": 0,
      "react/function-component-definition": 0,
      "react/no-unused-class-component-methods": 0,
      "react/jsx-no-bind": 0,
      "@typescript-eslint/no-var-requires": 0,
      "react/prop-types": 0,
      "camelcase": 0,
      "@getify/proper-arrows/name": 0
    },
    "globals": {
      "t": true
    }
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "jsxBracketSameLine": false,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "babel-jest",
        {
          "presets": [
            "@babel/env"
          ]
        }
      ]
    },
    "testRegex": "((src/\\.|/*.)(spec))\\.(t|j)s?$",
    "moduleNameMapper": {
      "^.+.(css|style|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "ionic-native": "jest-transform-stub",
      "swiper": "jest-transform-stub"
    },
    "moduleDirectories": [
      "node_modules",
      "components",
      "src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ionic|@stencil|ionicons)"
    ]
  }
}
