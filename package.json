{
  "name": "butterfly-count-app",
  "id": "uk.ac.ceh.ebms",
  "title": "ButterflyCount",
  "description": "ButterflyCount mobile application.",
  "version": "1.24.3",
  "homepage": "http://www.butterfly-monitoring.net",
  "scripts": {
    "start": "webpack serve --progress --port 8000",
    "build": "NODE_ENV=production webpack",
    "build:production": "npm run clean && npm run build && npx cap sync && npm run build:resources",
    "build:resources": "mkdir -p resources && cp -R other/designs/android resources && cp -R other/designs/*.png resources && npx cordova-res ios --skip-config --resources resources --copy && npx cordova-res android --skip-config --resources resources --copy",
    "deploy": "cp other/demo.html build/ && URL=$(vercel --prod -t $VERCEL_TOKEN --confirm ./build) && CLEAN_URL=$(echo $URL | sed -r \"s/https:\\/\\/(.*)$/\\1/g\") && DEMO_URL=$(echo $CLEAN_URL | sed -r \"s/(.*\\-)[a-z0-9]+\\-flumens(\\.vercel\\.app)$/\\1${BITRISE_BUILD_NUMBER}\\2/g\") && vercel alias set $CLEAN_URL $DEMO_URL -t $VERCEL_TOKEN && envman add --key DEMO_URL --value \"https://$DEMO_URL\"",
    "deploy:production": "bitrise run ci",
    "clean": "rm -rf build resources",
    "test:eslint": "eslint src --quiet --ext .jsx --ext .js --ext .ts --ext .tsx && echo '\\033[37;42;1m PASS \\033[00m'",
    "test": "jest --silent --passWithNoTests",
    "test:watch": "jest --watchAll",
    "fetch:species:data": "cd src/common/data/species && tsx make.ts",
    "fetch:species:profiles": "cd src/common/data/profiles && tsx make.ts",
    "fetch:species:commonNames": "cd src/common/data/commonNames && tsx ./make.ts",
    "fetch:all": "npm run fetch:species:data && npm run fetch:species:profiles && npm run fetch:species:commonNames"
  },
  "dependencies": {
    "@capacitor-community/background-geolocation": "^1.2.15",
    "@capacitor/android": "^5.6.0",
    "@capacitor/app": "5.0.6",
    "@capacitor/camera": "^5.0.8",
    "@capacitor/core": "^5.6.0",
    "@capacitor/device": "5.0.6",
    "@capacitor/filesystem": "^5.2.0",
    "@capacitor/geolocation": "5.0.6",
    "@capacitor/haptics": "5.0.6",
    "@capacitor/ios": "^5.6.0",
    "@capacitor/keyboard": "^5.0.7",
    "@capacitor/network": "5.0.6",
    "@capacitor/push-notifications": "^5.1.0",
    "@capacitor/splash-screen": "5.0.6",
    "@capacitor/status-bar": "5.0.6",
    "@flumens/bigu": "0.4.0",
    "@flumens/ionic": "2.0.0-alpha.35",
    "@ionic-native/core": "5.36.0",
    "@ionic-native/launch-review": "5.36.0",
    "@ionic-native/sqlite": "5.36.0",
    "@ionic/core": "^7.6.4",
    "@ionic/react": "^7.6.4",
    "@ionic/react-router": "^7.6.4",
    "@mapbox/geojson-area": "0.2.2",
    "@mapbox/mapbox-gl-draw": "^1.4.3",
    "@mapbox/sphericalmercator": "^1.2.0",
    "@sentry/browser": "7.81.1",
    "@sentry/capacitor": "^0.15.1",
    "@sentry/integrations": "7.81.1",
    "@turf/distance": "6.5.0",
    "@turf/kinks": "^6.5.0",
    "@types/wellknown": "^0.5.8",
    "axios": "^1.6.5",
    "clsx": "^2.1.0",
    "cordova-launch-review": "4.0.1",
    "cordova-plugin-device": "2.1.0",
    "cordova-sqlite-storage": "6.1.0",
    "d3": "7.8.5",
    "deep-diff": "1.0.2",
    "formik": "^2.4.5",
    "i18next": "^23.7.16",
    "ionicons": "^7.2.2",
    "jwt-decode": "^4.0.0",
    "localforage": "1.10.0",
    "localforage-cordovasqlitedriver": "1.8.0",
    "lodash": "4.17.21",
    "mobx": "^6.12.0",
    "mobx-react": "7.6.0",
    "mobx-utils": "^6.0.8",
    "prop-types": "15.8.1",
    "prop-types-exact": "1.2.0",
    "react": "18.2.0",
    "react-autosuggest": "10.1.0",
    "react-countdown-now": "2.1.2",
    "react-dom": "18.2.0",
    "react-i18next": "^14.0.0",
    "react-map-gl": "^7.1.7",
    "react-router": "5.3.4",
    "react-router-dom": "5.3.4",
    "react-window": "^1.8.10",
    "react-window-infinite-loader": "^1.0.9",
    "suncalc": "1.9.0",
    "swiper": "^11.0.5",
    "wellknown": "0.5.0",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-exponentiation-operator": "^7.23.3",
    "@babel/plugin-transform-runtime": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@capacitor/cli": "^5.6.0",
    "@flumens/eslint-config": "2.0.1",
    "@flumens/fetch-onedrive-excel": "0.3.3",
    "@flumens/prettier-config": "0.2.3",
    "@flumens/webpack-config": "5.3.3",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.14.202",
    "@types/mapbox__sphericalmercator": "^1.2.3",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/react-router": "5.1.20",
    "@types/react-router-dom": "5.3.3",
    "@types/react-window": "^1.8.8",
    "@types/react-window-infinite-loader": "^1.0.9",
    "@types/suncalc": "^1.9.2",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "5.0.0",
    "btoa": "1.2.1",
    "cordova-res": "0.15.4",
    "csvtojson": "2.0.10",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "gettext-parser": "2.0.0",
    "gettext-to-messageformat": "0.3.1",
    "husky": "8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "2.0.0",
    "mock-geolocation": "1.0.11",
    "request": "2.88.2",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vercel": "^33.1.0",
    "webpack": "^5.89.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=9"
  },
  "author": {
    "name": "Flumens",
    "email": "enquiries@flumens.io",
    "url": "https://flumens.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NERC-CEH/ebms-app"
  },
  "bugs": {
    "url": "https://github.com/NERC-CEH/ebms-app/issues"
  },
  "licenses": [
    {
      "type": "GNU GPL v3",
      "url": "http://www.gnu.org/licenses/gpl.html"
    }
  ],
  "keywords": [
    "ebms",
    "biological",
    "recording",
    "mobile",
    "app",
    "offline",
    "ceh",
    "ukbms"
  ],
  "babel": {
    "assumptions": {
      "setPublicClassFields": true
    },
    "presets": [
      [
        "@babel/react",
        {
          "runtime": "automatic"
        }
      ],
      [
        "@babel/env",
        {
          "targets": {
            "android": "5.1",
            "ios": "10.2"
          },
          "loose": true,
          "modules": "commonjs",
          "corejs": "3.0.0",
          "useBuiltIns": "usage"
        }
      ],
      [
        "@babel/typescript",
        {
          "allowDeclareFields": true
        }
      ]
    ],
    "plugins": [
      [
        "@babel/transform-runtime",
        {
          "regenerator": true
        }
      ],
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ],
          "alias": {
            "@flumens$": "./src/common/flumens",
            "common": "./src/common",
            "helpers": "./src/common/helpers",
            "models": "./src/common/models",
            "Components": "./src/common/Components"
          }
        }
      ],
      [
        "@babel/proposal-private-property-in-object",
        {
          "loose": true
        }
      ],
      "@babel/transform-exponentiation-operator",
      "@babel/syntax-dynamic-import"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@flumens",
      "plugin:react/jsx-runtime"
    ],
    "rules": {
      "arrow-body-style": 0,
      "no-restricted-exports": 0,
      "react/jsx-no-useless-fragment": 0,
      "class-methods-use-this": 0,
      "default-param-last": 0,
      "react/function-component-definition": 0,
      "react/no-unused-class-component-methods": 0,
      "react/jsx-no-bind": 0,
      "@typescript-eslint/no-var-requires": 0,
      "react/prop-types": 0,
      "camelcase": 0,
      "@getify/proper-arrows/name": 0
    },
    "globals": {
      "t": true
    }
  },
  "prettier": "@flumens/prettier-config",
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "babel-jest",
        {
          "presets": [
            "@babel/env"
          ]
        }
      ]
    },
    "testRegex": "((src/\\.|/*.)(spec))\\.(t|j)s?$",
    "moduleNameMapper": {
      "^.+.(css|style|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "ionic-native": "jest-transform-stub",
      "swiper": "jest-transform-stub"
    },
    "moduleDirectories": [
      "node_modules",
      "components",
      "src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ionic|@stencil|ionicons)"
    ]
  }
}
